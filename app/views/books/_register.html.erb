<%= form_for @book do |f| %>

  <%= f.hidden_field :user_id, :value => current_user.id %>
  <div class="form-group">
    <%= f.label :title,"タイトル" %>
    <%= f.text_field :title , class: "form-control",required: true%>
  </div>

  <div class="form-group">
    <%= f.label :publisher,"出版社" %>
    <%= f.text_field :publisher , class: "form-control",required: true%>
  </div>

  <div class="form-group">
    <%= f.label :author,"作者・著者" %>
    <%= f.text_field :author , class: "form-control",required: true%>
  </div>

  <div class="form-group">
    <%= f.label :review,"感想" %>
    <%= f.text_area :review , class: "form-control",required: true%>
  </div>

  <div class="form-group">
    <%= f.label :start_date,"読み始めた" %>
    <%= f.date_field :start_date , class: "form-control",required: true%>
  </div>

  <div class="form-group">
    <%= f.label :end_date,"読み終わった" %>
    <%= f.date_field :end_date , class: "form-control",required: true%>
  </div>

  <div class="form-group">
    <%= f.radio_button :status, :read %>
    <%= f.label :status,"既読",{value: :read, style: "display: inline-block;"} %>
    <%= f.radio_button :status, :unread %>
    <%= f.label :status,"未読",{value: :unread, style: "display: inline-block;"} %>
  </div>

    <%= f.submit class: "btn btn-primary" %>
<% end %>

<% if signed_in? %>
  <%= link_to "マイページ",users_show_path(current_user.id) %>
  <%= link_to "ログアウト", destroy_user_session_path, method: :delete %>
<% end %>
